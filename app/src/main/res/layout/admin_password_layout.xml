<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/main_title_color"
        android:textSize="16sp"
        android:text="请输入管理员密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.example.adminpasswrod.PasswordEditText
        android:id="@+id/passwordEdt"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bgColor="@color/dark_text"
        app:bgCorner="4dp"
        app:bgSize="2dp"
        app:divisionLineColor="@color/dark_text"
        app:divisionLineSize="2dp"
        app:passwordColor="@color/dark_text"
        app:passwordRadius="5dp"/>

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededed"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="1"
                android:textColor="@color/main_title_color"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="2"
                android:textColor="@color/main_title_color"
                android:textSize="20sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="3"
                android:textColor="@color/main_title_color"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="4"
                android:textColor="@color/main_title_color"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="5"
                android:textColor="@color/main_title_color"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="6"
                android:textColor="@color/main_title_color"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="7"
                android:textColor="@color/main_title_color"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="8"
                android:textColor="@color/main_title_color"
                android:textSize="20sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="9"
                android:textColor="@color/main_title_color"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/e8e8e8"
                android:gravity="center"
                android:padding="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="15dp"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/main_title_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/e8e8e8"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:src="@mipmap/image_clear"
                    app:tint="@color/main_title_color" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>